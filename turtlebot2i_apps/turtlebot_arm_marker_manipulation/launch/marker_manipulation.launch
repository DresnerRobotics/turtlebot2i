<launch>
	<arg name="at_dock" default="false"/>

<!-- Launch block manipulation demo -->
  <node name="tool_detection_action_server" pkg="turtlebot_arm_marker_manipulation" type="tool_detection_action_server" output="screen">
    <rosparam param="table_pose">[0.0, 0.0, -0.125]</rosparam> <!--from arm position-->
    <rosparam if="$(arg at_dock)" param="dock_pose">[0.042, 0.0, -0.125]</rosparam> <!--from arm position-->
  </node>

  <node name="pick_and_draw_action_server" pkg="turtlebot_arm_marker_manipulation" type="pick_and_draw_action_server" output="screen">
  	<param name="drawing_surface_height" value="0.0058"/> <!-- Dry erase board is 5.8mm thick -->
  </node>

</launch>
